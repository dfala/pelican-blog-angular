<header ng-controller="HeaderController">
  <form class="search" ng-submit="search(query)">
    <input ng-model="query" placeholder="Search users, lists, or posts..." escape-search/>
    <button><span class="icon ion-ios-search-strong"></span></button>

    <div class="suggestions" ng-if="suggestions && query" ng-cloak>
      <div class="suggestion" ng-repeat="item in suggestions" ng-click="activateSuggestion(item)">
        <img ng-src="{{item.image}}" alt="item.text" ng-if="item.image" />
        {{item.text}}
      </div>
    </div>
  </form>

  <% if (user && user._id) { %>
    <div class="align">
      <a href="/logout">Logout</a>
      <% if (user.image) { %>
        <img src="<%= user.image %>" alt="<%= user.displayName %>" send-to="/user/<%= user._id %>"/>
      <% } %>
    </div>
  <% } else { %>
    <div class="align">
      <a href="/auth/facebook">Sign Up / Login</a>
    </div>
  <% } %>
</header>
