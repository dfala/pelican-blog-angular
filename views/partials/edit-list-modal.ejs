<section class="modal-container" ng-show="isEditListModalOpen" ng-controller="RenameListController" ng-cloak>
  <div class="modal-backdrop" ng-click="closeEditListModal()"></div>

  <div class="modal list-modal">
    <div class="top">
      <h1>How should we rename your list?</h1>

      <div class="close-modal ion-android-close pointer" ng-click="closeEditListModal()"></div>
    </div>

    <div class="body">
      <input type="text" placeholder="Name" ng-model="activeList.title" />
      <button class="cta" ng-click="renameList(activeList)">Rename List</button>
    </div>
  </div>
</section>
