<% include ./partials/head.ejs %>
  <% include ./partials/header.ejs %>
  <% include ./partials/banner.ejs %>

  <section class="lists" ng-controller="HomeController">
    <% posts.forEach(function (post) { %>
      <section class="post">
        <div class="body" ng-click="openPost(<%= JSON.stringify(post) %>)">
          <p class="post-title"><%= post.title %></p>
          <a ng-href="<%= post.link %>"><%= post.link %></a>
          <p class="text"><%= post.text %></p>
        </div>
        <div class="author">
          <a href="/user/<%= post.owner._id %>">
            <img src="<%= post.owner.image %>" />
            <%= post.owner.displayName %>
          </a>
        </div>
      </section>
    <% }) %>

    <% include ./partials/post-modal.ejs %>
  </section>

<% include ./partials/footer.ejs %>
